<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categories -->
    <record id="module_category_contracted_visits" model="ir.module.category">
        <field name="name">Contracted Visits</field>
        <field name="sequence">10</field>
    </record>

    <!-- Groups -->
    <record id="group_visits_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_contracted_visits"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_visits_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_contracted_visits"/>
        <field name="implied_ids" eval="[(4, ref('group_visits_user'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="contracted_company_rule_user" model="ir.rule">
        <field name="name">Contracted Company: User can see all</field>
        <field name="model_id" ref="model_contracted_company"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_visits_user'))]"/>
    </record>

    <record id="company_visit_rule_user" model="ir.rule">
        <field name="name">Company Visit: User can see all</field>
        <field name="model_id" ref="model_company_visit"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_visits_user'))]"/>
    </record>
</odoo>